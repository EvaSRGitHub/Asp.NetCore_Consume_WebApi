@model WebApiModels.ToDoInputModel

@{
    var id = 0;
}
<form method="post" asp-controller="Home" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="Name"></label>
            <select asp-for="JsonObj" class="form-control">
                @foreach (var item in Model.Items)
                {
                    <option value="{'id': '@item.Id', 'isComplete': '@item.IsComplete', 'name': '@item.Name'}">@item.Name</option>
                }

            </select>
        </div>
        <div class="form-group form-check col-md-12">
            <input asp-for="IsComplete" type="checkbox" class="form-check-input">
            <label asp-for="IsComplete" class="form-check-label text-center"></label>
            <span asp-validation-for="IsComplete" class="text-danger"></span>
        </div>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-info">Edit</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />}